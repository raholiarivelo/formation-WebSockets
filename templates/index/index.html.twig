{% extends 'base.html.twig' %}
{% block title %}Hello IndexController!{% endblock %}
{% block body %}
<style>
    body {
        font-family: arial;
    }
 
    .form-group {
        margin-bottom: 10px;
    }
 
    input {
        border: solid lightgrey 1px;
        padding: 8px;
    }
 
    label {
        display: inline-block;
        min-width: 150px;
    }
 
    #chat {
        height: 400px;
        border: solid lightgrey 1px;
        overflow: auto;
        margin-bottom: 20px;
    }
 
    button {
        padding: 6px 12px;
    }
 
    .message {
        padding: 10px 5px;
        margin-bottom: 10px;
        border-bottom: solid lightgrey 1px;
    }
    .disc {
        padding-left: 15px;
    }
</style>
<div class="container">
    <div class="jumbotron text-center">
        <h1>Formation websocket</h1>
        <p>Message instantan√©</p>
    </div>
    <div id="chat">
    </div>
    <form>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Destinateur</label>
            <select class="form-control" name='name' id='name'>
                <option value='client'>Client A</option>
                <option value='app'>Client B</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Message</label>
            <textarea class="form-control" id="message" rows="3"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="button" id="sendBtn">Envoyer</button>
        </div>
    </form>
</div>
{% endblock %}
{% block javascripts %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
$('#sendBtn').click(function() {
    var message = $('#message').val();
    var key = $("#name option:selected").val();
    var name = $("#name option:selected").text();
    $.ajax({
        method: "POST",
        url: "{{path('index')}}",
        data: { key: key, message: message },
        success: function(result) {
            $("#chat").append("<p class='disc'><b>" + name + " : </b>" + message + "</p>");
        }
    });
});
</script>
{% endblock %}